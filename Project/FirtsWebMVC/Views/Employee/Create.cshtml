@model FirtsWebMVC.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<div class="w3-row">
    <b>Employee/Create</b>
    <a class="w3-btn w3-round w3-border w3-teal w3-right" asp-action="Index">Back</a>
</div>
<hr>
<div class="max-width-40 ud-center">
    <div class="w3-container w3-teal">
        <h2>Create new Employee</h2>
    </div>
    <form asp-action="Create" class="w3-container w3-card-4 w3-padding">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w3-row">    
            <div class="w3-col-l3">
                <label asp-for="EmployeeID" class="control-label"></label>
                <input asp-for="EmployeeID" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="PersonID" class="control-label"></label>
                <select asp-for="PersonID" class ="form-control" asp-items="ViewBag.PersonID"></select>
            </div>
            <div class="w3-col-l3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="w3-col-l3">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="w3-input w3-border w3-border-black w3-round" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary w3-border w3-teal" />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
